<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p>
</p>
<p>
  <% if @article.image.exists? %>
    <%= image_tag @article.image.url(:medium) %><br/>
  <% end %>
</p>
<p><%= @article.body %></p>
<%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Really delete the article?"} %> &nbsp;
<%= link_to " Edit", edit_article_path(@article) %><br>
<h3>Comments</h3>
<%= render partial: 'articles/comment', collection: @article.comments %> <br>
<%= link_to "<< Back to Articles List", articles_path %> <br>
<%= render partial: 'comments/form' %>
<h3>Comments (<%= @article.comments.size %>)</h3>

